<BorderPane prefHeight="497.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <top>
      <Label alignment="CENTER" maxHeight="70.0" maxWidth="1564.0" style="-fx-background-color: #000;" text="Massachusetts General Hospital" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
      </Label>
   </top>
   <right>
      <Pane prefHeight="530.0" prefWidth="415.0" style="-fx-background-color: #fdffcf;" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="loginVBox" layoutX="13.0" layoutY="86.0" prefHeight="343.0" prefWidth="390.0" spacing="15.0" style="-fx-background-color: #fdffcf;">
               <children>
                  <Label text="Username:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="username" prefHeight="40.0" prefWidth="370.0" promptText="Username">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <Label text="Password:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="password" prefHeight="40.0" promptText="Password">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </PasswordField>
                  <Label text="User Type:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="type" prefHeight="40.0" prefWidth="370.0" promptText="Choose Type" visibleRowCount="100" />
